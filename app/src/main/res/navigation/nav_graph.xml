<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.fatihaltuntas.tabirbaz.view.fragments.WelcomeFragment"
        android:label="@string/welcome"
        tools:layout="@layout/fragment_welcome">
        
        <action
            android:id="@+id/action_welcomeFragment_to_onboarding"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
            
        <action
            android:id="@+id/action_welcomeFragment_to_register"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.fatihaltuntas.tabirbaz.view.fragments.OnboardingFragment"
        android:label="@string/onboarding"
        tools:layout="@layout/fragment_onboarding">
        
        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.fatihaltuntas.tabirbaz.view.fragments.auth.ForgotPasswordFragment"
        android:label="@string/forgot_password_title"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.fatihaltuntas.tabirbaz.view.fragments.auth.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">
        
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
            
        <action
            android:id="@+id/action_login_to_forgotPassword"
            app:destination="@id/forgotPasswordFragment" />

        <action
            android:id="@+id/action_login_to_emailVerification"
            app:destination="@id/emailVerificationFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.fatihaltuntas.tabirbaz.view.fragments.auth.RegisterFragment"
        android:label="@string/create_account"
        tools:layout="@layout/fragment_register">
        
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_register_to_emailVerification"
            app:destination="@id/emailVerificationFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/emailVerificationFragment"
        android:name="com.fatihaltuntas.tabirbaz.view.fragments.auth.EmailVerificationFragment"
        android:label="@string/email_verification"
        tools:layout="@layout/fragment_email_verification">
        <action
            android:id="@+id/action_emailVerification_to_profileCompletion"
            app:destination="@id/profileCompletionFragment"
            app:popUpTo="@id/emailVerificationFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileCompletionFragment"
        android:name="com.fatihaltuntas.tabirbaz.view.fragments.auth.ProfileCompletionFragment"
        android:label="@string/complete_profile"
        tools:layout="@layout/fragment_profile_completion" />

</navigation>